{
  "hosting": {
    "public": "_prod",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "_dev/**",
      "site/**",
      "src/**",
      "stories/**",
      "build/**"
    ],
    "headers": [
      {
        "source": "**/*.*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "604800"
          }
        ]
      },
      {
        "source": "**/[!chunk-]*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/@(*.woff2|playground-typescript-worker.js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "31536000"
          }
        ]
      }
    ]
  }
}
